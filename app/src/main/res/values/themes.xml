<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Camvi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/Yellow</item>
        <item name="colorPrimaryVariant">@color/YellowLight</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/Background</item>

        <!-- Text and icon colors -->
        <item name="android:textColorPrimary">@color/GraySecondary</item>
        <item name="android:textColorSecondary">@color/GrayDisabled</item>


    </style>

    <style name="Theme.Camvi" parent="Base.Theme.Camvi" />

    <style name="Theme.Camvi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Camvi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Camvi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>